<!-- Display Form Data HTML -->

<div id="formDataDisplay"></div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Retrieve form data from session storage
    var formDataJSON = sessionStorage.getItem('formData');
    if (formDataJSON) {
      var formData = JSON.parse(formDataJSON);

      // Display form data
      var formDataDisplay = document.getElementById('formDataDisplay');
      formDataDisplay.innerHTML = '<h2>Form Data:</h2>' +
                                   '<p><strong>Name:</strong> ' + formData.name + '</p>' +
                                   '<p><strong>Email:</strong> ' + formData.email + '</p>';
    }
  });
</script>
