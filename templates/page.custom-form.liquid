  This is a custom page template with a form
{% endcomment %}

<!DOCTYPE html>
<html>
<head>
    <title>Custom Form Page</title>
</head>
<body>
    <h1>Custom Form</h1>

    <form action="/submit_custom_form" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <label for="message">Message:</label><br>
        <textarea id="message" name="message" rows="4" cols="50" required></textarea><br><br>

        <button type="submit">Submit</button>
    </form>

      <script>
        function submitForm() {
            var formData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                message: document.getElementById('message').value
            };

            // Send form data via AJAX
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/submit_custom_form.php', true);
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.onload = function () {
                if (xhr.status >= 200 && xhr.status < 300) {
                    console.log('Form submitted successfully');
                    // Optionally show success message or redirect user
                } else {
                    console.error('Form submission failed');
                    // Optionally handle error
                }
            };
            xhr.send(JSON.stringify(formData));
        }
    </script>

</body>
</html>
