<!-- Button to open the modal -->
<button id="myBtn">Open Contact Form</button>

<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Contact Us</h2>
    <form id="contactForm">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required><br>
      <br>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required><br>
      <br>
      <label for="message">Message:</label><br>
      <textarea id="message" name="message" rows="4" required></textarea><br>
      <br>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>

<script>
      document.addEventListener('DOMContentLoaded', function() {
      // Get modal elements
      var openModalBtn = document.getElementById('openModalBtn');
      var closeModalBtn = document.getElementById('closeModalBtn');
      var contactModal = document.getElementById('contactModal');
      var contactForm = document.getElementById('contactForm');

      console.log(openModalBtn, closeModalBtn, contactModal, contactForm); // Debug: Check element values

      // Add event listeners if elements exist
      if (openModalBtn && closeModalBtn && contactModal && contactForm) {
          openModalBtn.addEventListener('click', function() {
              contactModal.style.display = 'block';
          });

          closeModalBtn.addEventListener('click', function() {
              contactModal.style.display = 'none';
          });

          window.addEventListener('click', function(event) {
              if (event.target === contactModal) {
                  contactModal.style.display = 'none';
              }
          });

          contactForm.addEventListener('submit', function(event) {
              event.preventDefault(); // Prevent default form submission

              // Handle form submission (e.g., AJAX)
              console.log('Form submitted'); // Debug: Check form submission
          });
      } else {
          console.error('One or more elements not found'); // Debug: Log error if elements are not found
      }
  });
</script>

<style>
    /* The Modal (background) */
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 999; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scrolling if needed */
    background-color: rgba(0,0,0,0.5); /* Black w/ opacity */
  }

  /* Modal Content/Box */
  .modal-content {
    background-color: #fefefe;
    margin: 15% auto; /* 15% from the top and centered */
    padding: 20px;
    border: 1px solid #888;
    width: 80%; /* 80% width */
  }

  /* Close Button */
  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
</style>
