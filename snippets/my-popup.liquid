<!-- Custom Form Popup HTML -->
<button id="openModalBtn">Open Contact Form</button>

<div id="contactModal" class="modal">
  <div class="modal-content">
    <span id="closeModalBtn" class="close">&times;</span>
    <h2>Contact Us</h2>
    <form id="contactForm">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required><br>
      <br>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required><br>
      <br>
      <button type="submit" id="submitFormBtn">Submit</button>
    </form>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var openModalBtn = document.getElementById('openModalBtn');
    var closeModalBtn = document.getElementById('closeModalBtn');
    var contactModal = document.getElementById('contactModal');
    var contactForm = document.getElementById('contactForm');

    // Function to open the modal
    function openModal() {
      contactModal.style.display = 'block';
    }

    // Function to close the modal
    function closeModal() {
      contactModal.style.display = 'none';
    }

    // Event listener to open the modal
    openModalBtn.addEventListener('click', openModal);

    // Event listener to close the modal
    closeModalBtn.addEventListener('click', closeModal);

    // Event listener for form submission using AJAX
    contactForm.addEventListener('submit', function(event) {
      event.preventDefault(); // Prevent default form submission

      // Get form data
      var formData = new FormData(contactForm);

      // Make AJAX request to handle form submission
      var xhr = new XMLHttpRequest();
      xhr.open('POST', '/pages/custom-form-data', true); // Replace with your custom page URL
      xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
      xhr.onreadystatechange = function() {
        if (xhr.readyState === XMLHttpRequest.DONE) {
          if (xhr.status === 200) {
            // Display success message or handle response
            console.log('Form data submitted successfully');
            // Update form display on PDP without redirecting
            displayFormData(formData);
          } else {
            console.error('Form submission failed');
          }
        }
      };
      xhr.send(new URLSearchParams(formData)); // Send form data as URL-encoded parameters
    });

    // Function to display form data on PDP
    function displayFormData(formData) {
      // Update DOM elements with form data (example)
      var formDataDisplay = document.createElement('div');
      formDataDisplay.innerHTML = '<h2>Form Data:</h2>' +
                                  '<p><strong>Name:</strong> ' + formData.get('name') + '</p>' +
                                  '<p><strong>Email:</strong> ' + formData.get('email') + '</p>';
      document.body.appendChild(formDataDisplay); // Append to desired location on PDP
    }
  });
</script>

<style>
  /* Styles for modal */
  .modal {
    display: none;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 600px;
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
  }
</style>
